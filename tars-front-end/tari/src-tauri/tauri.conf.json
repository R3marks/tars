{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tari",
  "version": "0.1.0",
  "identifier": "comn.tars.app",
  "build": {
    "beforeDevCommand": "echo %cd% && cd.. && npm start",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../../build"
  },
  "app": {
    "windows": [
      {
        "title": "tari",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
